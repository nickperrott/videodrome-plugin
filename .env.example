# Videodrome Configuration

# Required Settings - Plex Integration
VIDEODROME_PLEX_URL=https://plex.tv
VIDEODROME_PLEX_TOKEN=your-token-here

# Required Settings - Media Identification
VIDEODROME_TMDB_API_KEY=your-api-key-here

# Required Settings - Media Storage
VIDEODROME_MEDIA_ROOT=/path/to/media

# Optional Settings - Ingest & Watcher
VIDEODROME_INGEST_DIR=/path/to/downloads
VIDEODROME_AUTO_INGEST=true
VIDEODROME_CONFIDENCE_THRESHOLD=0.85
VIDEODROME_WATCHER_AUTO_START=true

# Optional Settings - Transmission Integration
TRANSMISSION_URL=http://localhost:9091/transmission/rpc
TRANSMISSION_USER=
TRANSMISSION_PASSWORD=
TRANSMISSION_POLL_INTERVAL=30
TRANSMISSION_AUTO_REMOVE=false

# Optional Settings - Torrent Search
# Providers: thepiratebay, nyaa, ygg (comma-separated)
TORRENT_SEARCH_PROVIDERS=thepiratebay
# YggTorrent credentials (only if ygg is in TORRENT_SEARCH_PROVIDERS)
YGG_USERNAME=
YGG_PASSWORD=

# Optional Settings - NAS Volume Mount
# TrueNAS/NAS server details for automatic SMB volume mounting
VIDEODROME_NAS_IP=10.9.8.15
VIDEODROME_NAS_SHARE=MEDIA
VIDEODROME_NAS_MOUNT_POINT=/Volumes/MEDIA
# Set to true to auto-mount the volume when file access is needed
VIDEODROME_NAS_AUTO_MOUNT=false

# Optional Settings - Review-Based Discovery
# Get a free OMDb API key at https://www.omdbapi.com/ (1000 req/day free tier)
# Provides IMDb ratings and Rotten Tomatoes scores for discover_top_rated_content
# Leave blank to use TMDb ratings only (still fully functional)
OMDB_API_KEY=
