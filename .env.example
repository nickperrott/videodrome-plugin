# Videodrome Configuration

# Required Settings - Plex Integration
VIDEODROME_PLEX_URL=https://plex.tv
VIDEODROME_PLEX_TOKEN=your-token-here

# Required Settings - Media Identification
VIDEODROME_TMDB_API_KEY=your-api-key-here

# Required Settings - Media Storage
VIDEODROME_MEDIA_ROOT=/path/to/media

# Optional Settings - Ingest & Watcher
VIDEODROME_INGEST_DIR=/path/to/downloads
VIDEODROME_AUTO_INGEST=true
VIDEODROME_CONFIDENCE_THRESHOLD=0.85
VIDEODROME_WATCHER_AUTO_START=true

# Optional Settings - Transmission Integration
TRANSMISSION_URL=http://localhost:9091/transmission/rpc
TRANSMISSION_USER=
TRANSMISSION_PASSWORD=
TRANSMISSION_POLL_INTERVAL=30
TRANSMISSION_AUTO_REMOVE=false
